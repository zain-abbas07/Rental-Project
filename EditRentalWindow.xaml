<Window x:Class="RentARoom.EditRentalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Rental" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Room Number:" Margin="0,0,0,5"/>
            <TextBox Name="RoomNumberTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Description:" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Price per Night:" Margin="0,0,0,5"/>
            <TextBox Name="PricePerNightTextBox" Margin="0,0,0,20"/>

            <Button Content="Update" Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
