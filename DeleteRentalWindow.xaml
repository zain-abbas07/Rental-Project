<Window x:Class="RentARoom.DeleteRentalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentARoom"
        mc:Ignorable="d"
        Title="DeleteRentalWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Are you sure you want to delete this room?" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="RoomDetailsTextBlock" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Yes" Click="YesButton_Click" Margin="5"/>
                <Button Content="No" Click="NoButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
